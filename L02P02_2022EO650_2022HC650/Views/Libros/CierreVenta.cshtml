@model L02P02_2022EO650_2022HC650.Models.PedidoEncabezado

@{
    ViewData["Title"] = "Cierre de Venta";
}

<!-- Estilos personalizados -->
<style>
    .container-custom {
        max-width: 800px;
        margin: auto;
        text-align: center;
    }

    .header {
        background: #1f1f1f;
        color: white;
        padding: 20px;
        border-radius: 8px;
    }

    .table-container {
        width: 100%;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background: #343a40;
        color: white;
    }

    .btn-cerrar {
        background-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        width: 100%;
        margin-top: 20px;
    }

        .btn-cerrar:hover {
            background-color: #c82333;
        }
</style>

<!-- Encabezado -->
<div class="header text-center">
    <h2>Cierre de Venta</h2>
    <p>Confirme su compra y cierre la venta</p>
</div>

<!-- Información del Cliente -->
<div class="container-custom">
    <h3>Datos del Cliente</h3>
    <p><strong>Nombre:</strong> @Model.Cliente.Nombre</p>
    <p><strong>Correo:</strong> @Model.Cliente.Email</p>
</div>

<!-- Resumen del Pedido -->
<div class="table-container">
    <h3>Detalles de la Compra</h3>
    <table>
        <thead>
            <tr>
                <th>Libro</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.PedidoDetalles)
            {
                <tr>
                    <td>@detalle.Libro.nombre</td>
                    <td>1</td>
                    <td>$@detalle.Libro.precio</td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Total: $@Model.total</h3>
</div>

<!-- Botón de Cerrar Venta -->
<form asp-action="CerrarVenta" asp-controller="Libros" method="post">
    <input type="hidden" name="idPedido" value="@Model.id" />
    <button type="submit" class="btn-cerrar">Cerrar Venta</button>
</form>
