@model L02P02_2022EO650_2022HC650.Models.CompletarVentaViewModel

@{
    ViewData["Title"] = "Proceso de Venta";
}

<h2>Proceso de Venta</h2>

<div class="container">
    <div class="row">
        <!-- Datos del Cliente -->
        <div class="col-md-6">
            <h3>Datos del Cliente</h3>
            <p><strong>Nombre:</strong> @Model.Cliente.Nombre @Model.Cliente.Apellido</p>
            <p><strong>Email:</strong> @Model.Cliente.Email</p>
            <p><strong>Dirección:</strong> @Model.Cliente.Direccion</p>
        </div>

        <!-- Carrito de Venta -->
        <div class="col-md-6">
            <h3>Carrito de Venta</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nombre del Libro</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detalle in Model.DetallesPedido)
                    {
                        <tr>
                            <td>@detalle.Libro.nombre</td>
                            <td>@detalle.Libro.precio.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
            <h4><strong>Total a Pagar: @Model.Pedido.total.ToString("C")</strong></h4>

            <div class="form-group">
                @using (Html.BeginForm("CerrarVenta", "Libros", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Cerrar Venta</button>
                }
            </div>
        </div>
    </div>
</div>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">
        @TempData["MensajeExito"]
    </div>
}

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensajeError"]
    </div>
}
