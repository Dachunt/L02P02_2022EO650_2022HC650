@model IEnumerable<L02P02_2022EO650_2022HC650.Models.Libro>

@{
    ViewData["Title"] = "Venta de Libros";

    // Obtener valores de la sesión
    int totalLibros = Context.Session.GetInt32("TotalLibros") ?? 0;
    decimal totalPrecio = Context.Session.GetInt32("TotalPrecio") ?? 0;
}

<!-- Estilos personalizados -->
<style>
    .container-custom {
        max-width: 1000px;
        margin: auto;
        text-align: center;
    }

    .header {
        background: #1f1f1f;
        color: white;
        padding: 20px;
        border-radius: 8px;
    }

        .header img {
            width: 80px;
            margin-bottom: 10px;
        }

    .content {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .table-container {
        width: 65%;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .total-container {
        width: 30%;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background: #343a40;
        color: white;
    }

    .btn-agregar {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-agregar:hover {
            background-color: #218838;
        }

    .btn-completar {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        .btn-completar:hover {
            background-color: #0056b3;
        }

    .footer {
        margin-top: 40px;
        padding: 20px;
        background: #1f1f1f;
        color: white;
        text-align: center;
        font-size: 14px;
    }
</style>

<!-- Encabezado -->
<div class="header text-center">
    <img src="https://upload.wikimedia.org/wikipedia/commons/3/3b/Logo_placeholder.svg" alt="Logo">
    <h2>Venta de Libros</h2>
    <p>Seleccione los libros y posterior ingrese sus datos</p>
</div>

<!-- Contenedor de contenido -->
<div class="container-custom">
    <div class="content">
        <!-- Sección de Libros -->
        <div class="table-container">
            <h3>Lista de Libros</h3>
            <table>
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Autor</th>
                        <th>Precio (USD)</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var libro in Model)
                    {
                        <tr>
                            <td>@libro.nombre</td>
                            <td>@libro.id_autor</td>
                            <td>$@libro.precio</td>
                            <td>
                                @using (Html.BeginForm("AgregarAlCarrito", "Libros", FormMethod.Post))
                                {
                                    @Html.Hidden("idLibro", libro.id)
                                    <button type="submit" class="btn-agregar">+ Agregar</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Sección de Totales -->
        <div class="total-container">
            <h3>Total Libros</h3>
            <p style="font-size: 22px; color: blue;">📚 @totalLibros</p>
            <p><strong>Total (USD):</strong> $@totalPrecio</p>
            <button class="btn-completar" onclick="location.href='@Url.Action("CierreVenta", "Libros")'">Completar</button>
        </div>
    </div>
</div>

<!-- Pie de Página -->
<div class="footer">
    YYYY-DD-NN - NOMBRE DEL ALUMNO UNO<br>
    YYYY-DD-NN - NOMBRE DEL ALUMNO DOS
</div>
