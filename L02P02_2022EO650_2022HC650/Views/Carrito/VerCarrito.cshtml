@model IEnumerable<dynamic>

@{
    ViewBag.Title = "Carrito de Compras";
}

<h2>Carrito de Compras</h2>

<table class="table">
    <thead>
        <tr>
            <th>Libro</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>$@item.Precio</td>
                <td>@item.Cantidad</td>
                <td>$@(item.Precio * item.Cantidad)</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Libros")" class="btn btn-primary">Seguir Comprando</a>

