@model L02P02_2022EO650_2022HC650.Models.CierreVenta

@{
    ViewData["Title"] = "Cierre de Venta";
}

<h2>Cierre de Venta</h2>

<div>
    <h3>Datos del Cliente</h3>
    <p><strong>Nombre:</strong> @Model.Nombre @Model.Apellido</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Dirección:</strong> @Model.Direccion</p>
</div>

<div>
    <h3>Carrito de Venta</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Libro</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.DetallePedidos)
            {
                <tr>
                    <td>@detalle.NombreLibro</td>
                    <td>@detalle.Precio</td>
                    <td>@detalle.Cantidad</td>
                </tr>
            }
        </tbody>
    </table>
    <p><strong>Total a Pagar: </strong>@Model.Total</p>
</div>

<form method="post" asp-action="CerrarVenta" asp-route-pedidoId="@Model.PedidoId">
    <button type="submit" class="btn btn-success">Cerrar Venta</button>
</form>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Mensaje"]
    </div>
}
