@model L02P02_2022EO650_2022HC650.Models.Cliente

@{
    ViewData["Title"] = "Registro de Cliente";
}

<h2>Registro de Cliente</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Iniciar Venta</button>
</form>
