@model PedidoEncabezado
@{
    ViewData["Title"] = "Cierre de Venta";
}

<h2>Cierre de Venta</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<h4>Datos del Cliente</h4>
<table class="table">
    <tr>
        <th>Nombre</th>
        <td>@Model.Cliente.Nombre @Model.Cliente.Apellido</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Cliente.Email</td>
    </tr>
    <tr>
        <th>Dirección</th>
        <td>@Model.Cliente.Direccion</td>
    </tr>
</table>

<h4>Carrito de Compra</h4>
<table class="table">
    <thead>
        <tr>
            <th>Libro</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.PedidoDetalles)
        {
            <tr>
                <td>@detalle.Libro.nombre</td>
                <td>@detalle.Libro.precio</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total a Pagar: $@Model.total</h4>

<form method="post" asp-action="ConfirmarCierreVenta">
    <button type="submit" class="btn btn-success">Cerrar Venta</button>
</form>
